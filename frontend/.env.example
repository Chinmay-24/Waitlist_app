# ============================
# FRONTEND ENVIRONMENT EXAMPLE
# Copy this file to .env and fill in your values
# ============================

# ============================
# API CONFIGURATION
# ============================
# Backend API URL - Change to production URL in deployment
REACT_APP_API_URL=http://localhost:5000/api

# API request timeout in milliseconds
REACT_APP_API_TIMEOUT=30000

# ============================
# ENVIRONMENT
# ============================
# Options: development, production
REACT_APP_ENV=development

# ============================
# SECURITY
# ============================
# Token storage method: secure-storage (sessionStorage)
REACT_APP_TOKEN_STORAGE=secure-storage

# Enable request/response logging (development only)
REACT_APP_ENABLE_REQUEST_LOGGING=false

# ============================
# FEATURE FLAGS
# ============================
REACT_APP_ENABLE_MAP_VIEW=true
REACT_APP_ENABLE_CHECKOUT=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_CUISINE_FILTER=true

# ============================
# SESSION
# ============================
# Session timeout in milliseconds (1 hour = 3600000)
REACT_APP_SESSION_TIMEOUT=3600000
