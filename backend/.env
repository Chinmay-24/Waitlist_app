# ============================
# SERVER CONFIGURATION
# ============================
NODE_ENV=development
PORT=5000
HOST=localhost

# ============================
# DATABASE CONFIGURATION
# ============================
MONGODB_URI=mongodb://localhost:27017/restaurant-booking
DB_USER=
DB_PASSWORD=

# ============================
# SECURITY & JWT
# ============================
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_change_this
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
BCRYPT_ROUNDS=10

# ============================
# CORS & FRONTEND
# ============================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# ============================
# RATE LIMITING
# ============================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# ============================
# API KEYS & SERVICES (if needed)
# ============================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
EMAIL_SERVICE=
EMAIL_USER=
EMAIL_PASSWORD=

# ============================
# ADMIN CONFIGURATION
# ============================
ADMIN_EMAIL=admin@restoproject.com

# ============================
# LOGGING
# ============================
LOG_LEVEL=info

# ============================
# SESSIONS
# ============================
SESSION_SECRET=your_session_secret_change_this
SESSION_TIMEOUT=3600000

# ============================
# WAITING LIST CONFIG
# ============================
HIDE_WAITING_LIST_FROM_PUBLIC=true
REQUIRE_ADMIN_FOR_WAITING_LIST=true
